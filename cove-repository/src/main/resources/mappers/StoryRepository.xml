<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.carbybus.cove.repository.StoryRepository">
    <resultMap id="photoMap" type="com.carbybus.cove.domain.entity.journey.Story">
        <id property="id" column="id"></id>
        <result property="url" column="url"></result>
        <result property="name" column="name"></result>
        <result property="subject" column="subject"></result>
        <result property="description" column="description"></result>
        <result property="takeTime" jdbcType="TIMESTAMP" column="take_time"></result>
        <result property="createTime" jdbcType="TIMESTAMP" column="create_time"></result>
        <result property="ownerId" column="owner_id"></result>
        <association property="location" javaType="com.carbybus.cove.domain.entity.coordinate.Coordinate">
            <result property="latitude" column="latitude"></result>
            <result property="longitude" column="longitude"></result>
        </association>
    </resultMap>

    <insert id="insert">
        INSERT INTO story
        (id,url,name,subject,description,take_time,create_time,latitude,longitude,owner_id)
        VALUES
        (#{id},#{url},#{name},#{subject},#{description},#{takeTime},#{createTime},#{location.latitude},#{location.longitude},#{ownerId});
    </insert>

    <select id="selectByName" resultMap="photoMap">
        SELECT id,url,name,subject,description,take_time,latitude,longitude,owner_id
        FROM story
        <if test="name!=null">
            WHERE name LIKE concat('%',#{name},'%')
        </if>
        LIMIT 0,#{size}
    </select>

    <select id="selectByNear" resultMap="photoMap">
        SELECT id,url,name,subject,description,take_time,latitude,longitude,owner_id
        FROM story
        <if test="around!=null">
            WHERE latitude &gt; #{around.minLatitude} and latitude &lt; #{around.maxLatitude}
            and longitude &gt; #{around.minLongitude} and longitude &lt; #{around.maxLongitude}
        </if>
        ORDER BY id DESC
        LIMIT 0,#{size}
    </select>

    <select id="selectBySubject" resultMap="photoMap">
        SELECT id,url,name,subject,description,take_time,latitude,longitude,owner_id
        FROM story
        <if test="subjects!=null">
            WHERE subject IN
            <foreach collection="subjects" item="item" separator="," open="(" close=")">
                #{item}
            </foreach>
        </if>
        LIMIT 0,#{size}
    </select>
</mapper>